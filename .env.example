# Telegram Bot Configuration
# Get your bot token from @BotFather on Telegram
BOT_TOKEN=your_telegram_bot_token_here

# Database Configuration
# Path to the SQLite database file (optional, defaults to notes_bot.db)
DATABASE_FILE=notes_bot.db

# LLM Configuration
# URL for your local LLM API (defaults to Ollama)
LLM_API_URL=http://localhost:11434/api/generate
# Model name for your local LLM
LLM_MODEL=llama2

# Logging Configuration
# Log level: DEBUG, INFO, WARNING, ERROR (defaults to INFO)
LOG_LEVEL=INFO
# Log file path (optional, defaults to bot.log)
LOG_FILE=bot.log

# Reminder Configuration
# Timezone for reminders (defaults to UTC)
REMINDER_TIMEZONE=UTC