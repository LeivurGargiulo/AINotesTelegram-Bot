# Discord Bot Configuration
# Copy this file to .env and fill in your values

# Required: Discord Bot Token
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# Database Configuration
DATABASE_FILE=notes_bot.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=discord_bot.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# Reminder Configuration
REMINDER_TIMEZONE=UTC
REMINDER_MAX_PER_USER=10

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_BUCKET_SIZE=10
RATE_LIMIT_WINDOW=60

# Command Cooldowns (in seconds)
ADD_COOLDOWN=5
LIST_COOLDOWN=3
DELETE_COOLDOWN=3
SEARCH_COOLDOWN=3
REMIND_COOLDOWN=5
REMINDERS_COOLDOWN=3
STATUS_COOLDOWN=10

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=300

# Performance Configuration
MAX_CONCURRENT_OPERATIONS=10
DATABASE_TIMEOUT=30

# Security Configuration
# Comma-separated list of allowed guild IDs (leave empty for all guilds)
ALLOWED_GUILDS=
# Comma-separated list of blocked user IDs
BLOCKED_USERS=

# Development Configuration
DEBUG_MODE=false
TESTING_MODE=false

# Display Configuration
MAX_PREVIEW_LENGTH=50
NOTES_PER_PAGE=10
TIMESTAMP_FORMAT=%Y-%m-%d %H:%M:%S